{
  "name": "tempo-ui",
  "private": false,
  "version": "0.0.1",
  "description": "A personal React component library named temmpo-ui.",
  "main": "dist/tempo-ui.umd.js",
  "module": "dist/tempo-ui.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly --declaration --project tsconfig.json",
    "test:u": "jest --updateSnapshot",
    "test": "jest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{js,jsx,ts,tsx}\" --max-warnings 0",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.{js,jsx,ts,tsx}\" --fix",
    "preview": "vite preview",
    "format": "prettier --write ."
  },
  "keywords": [
    "react",
    "components",
    "ui-library"
  ],
  "author": "TempoJC",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.5.1",
    "normalize.css": "^8.0.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "postcss": "^8.5.6",
    "postcss-discard-comments": "^7.0.4",
    "postcss-import": "^16.1.1",
    "postcss-mixins": "^12.0.0",
    "postcss-preset-env": "^10.2.4",
    "postcss-url": "^10.1.3",
    "prettier": "^3.6.2",
